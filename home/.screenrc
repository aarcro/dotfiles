shell /bin/bash

# don't use visual bell
vbell off

# replace ctrl-A by ctrl-O
escape ^Oo
# set a big scrolling buffer
defscrollback 5000
# Set the caption on the bottom line
caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= @%H - %Y-%d-%m"
# Turn off the annoying startup message
startup_message off

#^ot to title
bind t title

# set up default screens
screen bash -l
title "sys"
screen bash -l
title "model"
screen bash -l
title "view"
screen bash -l
title "template"
screen bash -l
title "shell"
screen bash
title "bash"
